<div class = "container" ><br>
  <h2 align=center>Edit category</h2><hr><br>

  <% if @category.errors.any? %>
    <h4> The following errors prevented the category details from being saved ! </h4>
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

   <%= form_with(model: @category,local: true) do |f| %>

    <div class = "field form-group" >
      <%= f.label :category_name %>
      <%= f.text_field :category_name, class:"form-control" %>
    </div><br>
    
    <div align=center>
      <div class = "action" >
        <%= f.submit "Edit Category", class:"btn btn-secondary" %>
      </div>
    </div><br>

    <div align=center>
      <div class = "field form-group" >
        <%= link_to 'Back', { controller: 'categories', action: 'index'} %>
      </div>
    </div>
    
  <% end %>

</div>
