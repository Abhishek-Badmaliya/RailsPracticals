<div class = "container" ><br>
  <h2 class = "text-center mt-4" >Log Into Your Account</h2><br>

  <%= form_with scope: :session, url:login_path, local: true do |f| %>

    <div class = "field form-group" >
      <%= f.label :user_email %>
      <%= f.email_field :user_email, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <label>Password</label>
      <%= f.password_field :password, class:"form-control" %>
    </div><br>

    <div align=center>
      <div class = "action" >
        <%= f.submit "Log In", class:"btn btn-secondary" %>
      </div>
    <div><br>

    <div class = "field form-group" >
      <%= link_to 'Cancel', { controller: 'events', action: 'index'} %>
    </div>

  <% end %>
</div>
