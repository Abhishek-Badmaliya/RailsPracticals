<html>
<style>
  body {
    text-align:left;
    padding-top: 10px;
    background-color:lightgray;
    font-size:20px;
  }
</style>

<body>
  <div class="container">   
    
  <%= form_for @product, url: {action: :update} do |f| %>   
      
    <u><h2>Edit Product</h2></u>   
    <%= "<div>#{@product.errors.full_messages.first}</div>".html_safe if @product.errors.any? %>   
      <p>   
    
      <div>   
        <label>Product Name</label>   
        <%= f.text_field :name %>   
      </div>   
    
      <div>   
          <label>Price</label>   
          <%= f.text_field :price %>   
      </div>   
          
      <div>   
          <label>Description</label>   
          <%= f.text_field :short_description %>   
      </div>   
    
      </p>   
      <div>   
        <%= link_to 'Back', { controller: 'products', action: 'index'} %>   
        <%= f.submit 'Update Product' %>   
      </div>   
  <% end %>   
  </div>
</body>
</html>
