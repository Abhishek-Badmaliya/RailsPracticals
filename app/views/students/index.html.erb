<!DOCTYPE html>
<html>
<head>
  <link rel="styles.css">
</head>
<body id="b">
  <div class="container">
      <u><h2>Students</h2></u>
      
      <div>
        <%= link_to 'Add Student', new_student_path %>
      </div><br>

      <%= form_tag increase_order_path, data: {turbo: false}, :method => 'get' do %>
        <%= submit_tag "Increase Order"%>
      <% end %><br>

      <%= form_tag decrease_order_path, data: {turbo: false}, :method => 'get' do %>
        <%= submit_tag "Decrease Order"%>
      <% end %><br>

      <table class="tabl" >
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthdate</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.stu_dob %></td>
            <td><%= student.dept %></td>
            <div>
              <td>
                <%= link_to 'Show', student_path(student) %>
                  
                <%= link_to 'Edit', edit_student_path(student) %>
                <%= button_to 'Delete', student_path(student), method: :delete %>
              </td>
            </div>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</body>
</html>
