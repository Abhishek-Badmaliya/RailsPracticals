<html>
<head>
  <link rel="styles.css">
</head>
<body id="b1">
  <div class="container">
    <%= form_for @employee, data: { turbo: false }, url: {action: :create} do |f| %>
      <div>
        <u><h2>Add Employee Details</h2></u>
      </div>
      <div>
        <p>
          <%= "<div>#{@employee.errors.full_messages.first}</div>".html_safe if @employee.errors.any? %>
          <div>
            <label>Employee First Name</label>
            <%= f.text_field :first_name %>
          </div>
          <div>
            <label>Employee Last Name</label>
            <%= f.text_field :last_name %>
          </div>
          <div>
            <label>Employee Age</label>
            <%= f.text_field :age %>
          </div>
          <div>
            <label>Employee Email</label>
            <%= f.text_field :email %>
          <div>
          <div>
            <label>Employee Orders</label>
            <%= f.text_field :no_of_order %>
          <div>
          <div>
            <label>Employee Full Time Available</label>
            <%= f.text_field :full_time_available %>
          <div>
          <div>
            <label>Employee Salary</label>
            <%= f.text_field :salary %>
          <div>
        </p>
      </div>
      <div>
        <%= link_to 'Back', { controller: 'employees', action: 'index'} %>
        <%= f.submit 'Create Employee' %>
      </div>
    <% end %>
  </div>
</body>
</html>
