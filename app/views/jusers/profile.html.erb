<div class = "container" >
  <h2 class = "text-center mt-4" >Update Profile</h2>

  <% if @juser.errors.any? %>
    <h5> The following errors prevented the users profile from being saved ! </h5>
    <ul>
      <% @juser.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model:@juser, local: true, data: {turbo: false}) do |f| %>
    
    <div class = "field form-group" >
      <strong><%= f.label :first_name %></strong>
      <%= f.text_field :first_name, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :last_name %></strong>
      <%= f.text_field :last_name, class:"form-control" %>
    </div><br>

    <div class = "field form-group", id = "email" >
      <strong><%= f.label :user_email %></strong>
      <%= f.email_field :email, class:"form-control", oninput: "password()" %>
    </div><br>

    <div class = "field form-group", id = "password" >
      <strong><%= f.label :password %></strong>
      <%= f.password_field :password, class:"form-control" %>
    </div><br>

    <div class = "field form-group", id = "subscribe" >
      <strong><%= f.label :subscription %></strong>
      <%= f.check_box :subscription %>
    </div><br>

    <div class = "field form-group", id = "sub_email" >
      <strong><%= f.label :subscription_email %></strong>
      <%= f.email_field :subscription_email, class:"form-control" %>
    </div><br>

    <div class="text-center">
      <div class = "action" >
        <%= f.submit "Update", data: { disable_with: "Saving..." }, class: "btn btn-success" %>
      </div>
    </div><br>

  <% end %>

  <div class="text-center", id = "juser">
  </div>
</div>

