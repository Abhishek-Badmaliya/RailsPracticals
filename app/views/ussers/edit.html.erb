<div class = "container" ><br>
  <h2 class = "text-center mt-4" >Edit Profile</h2><br>

  <% if @usser.errors.any? %>
    <h2> The following errors prevented the user details from being saved ! </h2>
    <ul>
      <% @usser.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with scope: :usser, url:ussers_path, local: true do |f| %>
    <div class = "field form-group" >
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <label>Password</label>
      <%= f.password_field :password, class:"form-control" %>
    </div><br>
    
    <div align=center>
      <div class = "action" >
        <%= f.submit "Update Account", class:"btn btn-secondary" %>
      </div>  
    </div><br>

    <div align=center>
      <div class = "field form-group" >
        <%= link_to 'Back', { controller: 'ussers', action: 'index'} %>
      </div>
    </div>

  <% end %>
</div>
