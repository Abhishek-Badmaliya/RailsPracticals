<div class = "container" ><br>
  <h2 class="text-center mt-4">Create an User Account</h2><br>

  <% if @usser.errors.any? %>
    <h2> The following errors prevented the user details from being saved ! </h2>
    <ul>
      <% @usser.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @usser) do |f| %>

    <div class = "field form-group" >
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <%= f.label :user_email %>
      <%= f.email_field :user_email, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <label>Password</label>
      <%= f.password_field :password, class:"form-control" %>
    </div><br>

    <%= f.fields_for :address do |af| %>
      <div class="field form-group">
        <%= af.label :usser_address %>
        <%= af.text_field :usser_address, class:"form-control" %>
      </div><br>
    <% end %>
    
    <div align=center>
      <div class = "action" >
        <%= f.submit "Sign Up", class:"btn btn-secondary" %>
      </div>
    </div><br>

    <div align=center>
      <div class = "field form-group" >
        <%= link_to 'Cancel', { controller: 'ussers', action: 'index'} %>
      </div>
    </div>
    
  <% end %>
</div>
