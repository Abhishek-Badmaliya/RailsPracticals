<h1 class="text-center mt-4"><%= @usser.user_name %>'s Profile</h1>
<% if logged_in? && @usser == current_user %>
    <%= link_to "Log Out", logout_path, class:"btn btn-danger", method: :delete %>
<% end %>

<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="card p-3 py-4 shadow-lg p-3 mb-5 bg-white rounded">
                <div class="text-center"> <img src="https://i.imgur.com/bDLhJiP.jpg" width="100" class="rounded-circle"> </div>
                <div class="text-center mt-3"> 
                    <h5 class="mt-2 mb-0"><%= @usser.user_name %></h5> <span><%= @usser.user_email %></span>
                    <div class="px-4 mt-1">
                    </div>
                    
                    <% if logged_in? && @usser == current_user %>
                        <%= link_to "Edit Profile", edit_usser_path, class:"btn btn-primary" %> </div>
                        <%= link_to "Delete Profile", usser_path(current_user), class:"btn btn-danger", method: :delete, data: { Confirm: "Are you Sure?"} %> </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
