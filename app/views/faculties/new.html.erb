<html>
<head>
  <link rel="styles.css">
</head>
<body id="b1">
  <div class="container">
    <%= form_for @faculty, data: { turbo: false }, url: {action: :create} do |f| %>
      <div>
        <u><h2>Add Faculty Details</h2></u>
      </div>
      <div>
        <p>
          <%= "<div>#{@faculty.errors.full_messages.first}</div>".html_safe if @faculty.errors.any? %>
          <div>
            <label>Faculty First Name</label>
            <%= f.text_field :first_name %>
          </div>
          <div>
            <label>Faculty Last Name</label>
            <%= f.text_field :last_name %>
          </div>
          <div>
            <label>Faculty Date of Birth</label>
            <%= f.date_field :fac_dob %>
          </div>
          <div>
            <label>Faculty Contact Number</label>
            <%= f.text_field :contact %>
          </div>
          <div>
            <label>Faculty Email</label>
            <%= f.text_field :email %>
          </div>
          <div>
            <label>Designation</label>
            <%= f.text_field :desig%>
          </div>
        </p>
      </div>
      <div>
        <%= link_to 'Back', { controller: 'faculties', action: 'index'} %>
        <%= f.submit 'Create Faculty' %>
      </div>
    <% end %>
  </div>
</body>
</html>
