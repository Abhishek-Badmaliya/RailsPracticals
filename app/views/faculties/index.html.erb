<!DOCTYPE html>
<html>
<head>
  <link rel="styles.css">
</head>
<body id="b">
  <div class="container">
      <u><h2>Faculties</h2></u>
      
      <div>
        <%= link_to 'Add Faculty', new_faculty_path %>
      </div><br>

      <table class="tabl" >
        <thead>
          <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Birthdate</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @faculties.each do |faculty| %>
          <tr>
            <td><%= faculty.first_name %></td>
            <td><%= faculty.last_name %></td>
            <td><%= faculty.fac_dob %></td>
            <td><%= faculty.contact %></td>
            <td><%= faculty.email %></td>
            <td><%= faculty.desig %></td>
            <div>
              <td>
                <%= link_to 'Show', faculty_path(faculty) %>
                  
                <%= link_to 'Edit', edit_faculty_path(faculty) %>
                <%= button_to 'Delete', faculty_path(faculty), method: :delete %>
              </td>
            </div>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</body>
</html>
