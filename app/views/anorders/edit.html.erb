<div class = "container" ><br>
  <h2 class = "text-center mt-4" >Edit Order</h2><br>

  <% if @anorder.errors.any? %>
    <h4> The following errors prevented the orders details from being saved ! </h4>
    <ul>
      <% @anorder.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @anorder,local: true) do |f| %>
    <div class = "field form-group" >
      <%= f.label :order_quantity %>
      <%= f.text_field :quantity, class:"form-control" %>
    </div><br>
    <div class = "field form-group" >
      <%= f.label :total_price %>
      <%= f.text_field :total_price, class:"form-control" %>
    </div><br>
    <div class="text-center">
      <div class = "action" >
        <%= f.submit "Edit", class:"btn btn-success" %>
      </div>
    </div><br>
    <div class="text-center">
      <div class = "field form-group" >
        <%= link_to 'Cancel', { controller: 'anorders', action: 'index'}, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
