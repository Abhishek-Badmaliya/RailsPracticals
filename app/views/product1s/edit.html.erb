<html>
<head>
  <link rel="styles.css">
</head>
<body id="b3">
  <div class="container">
    <%= form_for @product1, data: { turbo: false }, url: {action: :update} do |f| %>
      <u><h2>Edit Product</h2></u>
      <%= "<div>#{@product1.errors.full_messages.first}</div>".html_safe if @product1.errors.any? %>
        <p>
          <div>
            <label>Product Title : </label>
            <%= f.text_field :title %>
          </div>
          <div>
            <label>Product Description : </label>
            <%= f.text_field :description %>
          </div>
          <div>
            <label>Product Price : </label>
            <%= f.text_field :price %>
          </div>
          <div>
            <label>Product Capacity : </label>
            <%= f.text_field :capacity %>
          </div>
          <div>
            <label>Product Active : </label>
            <%= f.select :is_active, ['Yes','No'] %>
          </div>
          <div>
            <label>Product Status : </label>
            <%= f.select :status, ['In Stock','Out of Stock','Coming Soon'] %>
          </div>
        </p>
        <div>
          <%= link_to 'Back', { controller: 'product1s', action: 'index'} %>
          <%= f.submit 'Update Product' %>   
        </div>
    <% end %>
  </div>
</body>
</html>
