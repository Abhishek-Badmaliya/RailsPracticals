<html>
  <head>
    <link rel="styles.css">
  </head>
  <body id="b1">
    <div class="container">
      <%= form_for @customer, data: { turbo: false }, url: {action: :create} do |f| %>
        <div>
          <u><h2>Add Customer Details</h2></u>
        </div>
        <div>
          <p>
            <%= "<div>#{@customer.errors.full_messages.first}</div>".html_safe if @customer.errors.any? %>
            <div>
              <label>Customer First Name : </label>
              <%= f.text_field :fname %>
            </div>
            <div>
              <label>Customer Last Name : </label>
              <%= f.text_field :lname %>
            </div>
            <div>
              <label>Customer Email : </label>
              <%= f.text_field :email %>
            </div>
            <div>
              <label>Customer Phone Number : </label>
              <%= f.text_field :phone_number %>
            </div>
          </p>
        </div>
        <div>
          <%= link_to 'Back', { controller: 'customers', action: 'index'} %>
          <%= f.submit 'Create Customer' %>
        </div>
      <% end %>
    </div>
  </body>
</html>
