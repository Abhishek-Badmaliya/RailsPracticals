<div class = "container" >
  <h2 class = "text-center mt-4" >Create a new User</h2>

  <% if @newuser.errors.any? %>
    <h4> The following errors prevented the products details from being saved ! </h4>
    <ul>
      <% @newuser.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model:@newuser, local: true, data: {turbo: false}) do |f| %>
    
    <div class = "field form-group" >
      <strong><%= f.label :user_name %></strong>
      <%= f.text_field :name, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :user_email %></strong>
      <%= f.email_field :email, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :picture %></strong>
      <%= f.file_field :picture, class:"form-control" %>
    </div><br>

    <div class="text-center">
      <div class = "action" >
        <%= f.submit "Save", class:"btn btn-success" %>
      </div>
    </div><br>

    <div class="text-center">
      <div class = "field form-group" >
        <%= link_to 'Cancel', { controller: 'newusers', action: 'index'}, class: "btn btn-danger" %>
      </div>
    </div>

  <% end %>
</div>
