<html>
<style>
  body {
    text-align:left;
    padding-top: 10px;
    background-color:lightgray;
    font-size:20px;
  }
</style>

<body>
  <div class="container">
    <%= form_for @book, url: {action: :update} do |f| %>
      <u><h2>Edit Book</h2></u>
      <%= "<div>#{@book.errors.full_messages.first}</div>".html_safe if @book.errors.any? %>
        <p>
          <div>
            <label>Book Name</label>
            <%= f.text_field :name %>
          </div>
          <div>
            <label>Book Price</label>
            <%= f.text_field :price %>
          </div>
        </p>
        <div>
          <%= link_to 'Back', { controller: 'books', action: 'index'} %>
          <%= f.submit 'Update Book' %>   
        </div>
    <% end %>
  </div>
</body>
</html>
