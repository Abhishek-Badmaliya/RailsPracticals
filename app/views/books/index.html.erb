<!DOCTYPE html>
<html>
  <link rel="styles.css">
</head>
<body id="b_1">
  <div class="container">
      <u><h2>Books</h2></u>
      
      <div>
        <%= link_to 'Add Book', new_book_path %>
      </div><br>

      <table class="tabl1">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.price %></td>
            <div>
              <td>
                <%= link_to 'Show', book_path(book) %>
                  
                <%= link_to 'Edit', edit_book_path(book) %>
                <%= button_to 'Delete', book_path(book), method: :delete %>
              </td>
            </div>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</body>
</html>
